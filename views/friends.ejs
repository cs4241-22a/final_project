    <div class="position-relative text-center" style="font-family: fantasy; margin-top: 15em">
        <h1>WELCOME, <%= myName %></h1>
    <h3>Your Connections Here</h3>
        <div class="font-weight-light border-top border-white m-3 row"></div>

<form method = 'POST' action = '/friends/add_friend' >
